# =====================================
# üåç App Configuration
# =====================================
# The environment mode (development, production, or test)
NODE_ENV=development

# The port your NestJS app runs on
PORT=4000

# Base prefix for all API routes
API_PREFIX=/api/v1

# =====================================
# üóÑÔ∏è Database Configuration (PostgreSQL via Neon)
# =====================================
# Host address for the PostgreSQL database
DB_HOST=your-database-host
# Port number for the database
DB_PORT=5432
# Database username
DB_USERNAME=your-database-username
# Database password
DB_PASSWORD=your-database-password
# Name of the specific database to use
DB_NAME=edutrack_db
# Whether to use SSL for DB connection (true/false)
DB_SSL=true

# =====================================
# üîê JWT & Authentication
# =====================================
# Secret key for generating JWT access tokens
JWT_SECRET=your-jwt-secret
# Expiration time for JWT access tokens (e.g. 15m, 1h)
JWT_EXPIRATION=15m
# Secret key for refresh tokens
JWT_REFRESH_SECRET=your-refresh-secret
# Expiration time for refresh tokens (e.g. 7d)
JWT_REFRESH_EXPIRATION=7d

# =====================================
# üõ°Ô∏è Security
# =====================================
# Rate limit window (in ms) ‚Äî e.g. 60000 = 1 minute
RATE_LIMIT_WINDOW_MS=60000
# Max requests per IP per window
RATE_LIMIT_MAX_REQUESTS=100
# Secret used for CSRF protection
CSRF_SECRET=your-csrf-secret
# Allowed frontend origin for CORS
CORS_ORIGIN=https://your-frontend-domain.com

# =====================================
# üß© Logging & Monitoring
# =====================================
# Logging level (error, warn, info, debug)
LOG_LEVEL=debug
